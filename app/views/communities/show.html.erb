<div class="row mb-4">
  <div class="col-sm-8">
    <h3><%= @community.name %></h3>
    <p><%= pluralize( @subscriber_count, 'member' ) unless @subscriber_count == 0 %></p>
  </div>
  <div class="col-sm-4">
    <% if @is_subscribed %>
      <%= link_to "Create New Post", new_community_post_path(@community), class: "btn btn-primary float-right" %>
    <% else %>
      <%= render partial: "communities/join", locals: { community_id: @community } %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-sm-8">
    <%= render partial: "posts/list", locals: {posts: @posts}%>
  </div>
  <div class="col-sm-4">
    <div class="card p-3">
      <p class="h5">Summary </p>
      <p class="mt-2"><%= @community.summary %></p>

    </div>
    <br>
    <div class="card p-3">
      <p class="h5">Rules</p>
      <p class="mt-2"><%= simple_format @community.rules %></p>
    </div>
  </div>
</div>
