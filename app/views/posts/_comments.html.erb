<% comments.each do |comment| %>
  <% if !comment.account.blank? %>
	<div class="comment">
		u/<%= link_to comment.account.username, profile_path(comment.account.username) %>
		<%= simple_format comment.message %>
	</div>
  <%else%>
	<div class="comment">
		u/[deleted]
		<%= simple_format comment.message %>
	</div>
  <%end%>
<% end %>
