<% if account_signed_in? %>
<div class="float-right">
  <%= link_to "Create New Post", new_community_path, class: "btn btn-outline-dark" %>
</div>
<%end%>

<% if @posts.size > 0 %>
<% @posts.each do |post| %>
<div class="card">
  <h3><%= link_to post.name, post %></h3>
  <%= simple_format post.rules %>
</div>
<% end %>
<% else %>
<p>No posts to show</p>
<% end %>
